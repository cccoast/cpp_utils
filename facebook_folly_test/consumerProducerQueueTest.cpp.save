#include <iostream>
#include <memory>
#include <functional>
#include <thread>
#include <chrono>

#include <unistd.h>

#include <folly/ProducerConsumerQueue.h>
#include <folly/FBString.h>

using namespace std;

void show(string& s){
    cout << s << endl;
}

int main(){

    folly::ProducerConsumerQueue<string> _queue(10000);

    std::thread reader([&_queue] {
      for (;;) {
        string str;
        while (!_queue.read(str)) {
          //spin until we get a value
          continue;
        }
        cout << "recv!" << endl;
        show(str);
      }
    });

    // producer thread:
    for (;;) {
      string str = "hello";
      while (_queue.write(str)) {
        //spin until the queue has room
        this_thread::sleep_for(std::chrono::seconds(1));
        cout << "send!" << endl;
        continue;
      }
    }


    return 0;
}
